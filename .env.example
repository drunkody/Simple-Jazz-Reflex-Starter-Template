# Jazz Sync Server
JAZZ_SYNC_SERVER=wss://cloud.jazz.tools
# For local development: ws://localhost:4000
# For offline-only (no sync): leave empty

# Jazz Settings
JAZZ_ENABLE_P2P=true
JAZZ_AUTH_PROVIDER=anonymous

# App Settings
APP_ENV=development
LOG_LEVEL=INFO

# Reflex Settings (NixOS compatibility)
REFLEX_USE_SYSTEM_BUN=true